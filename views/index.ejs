<%- include('./partials/header.ejs') %>

    <div class="container" id="first">
        <% if (blogs.length > 0){ %>
            <% blogs.forEach(blog => { %>
                <div class="row" id="firstone">
                    <div class="col-md-2">
                        <a href="/blogs/single/<%= blog._id %>">
                            <img src="/uploads/<%= blog.img %>" alt="" class="img-fluid rounded-circle">
                        </a>
                    </div>
                    <div class="col-md-10 mt-5">
                        <h3><a href="/blogs/single/<%= blog._id %>"><%= blog.title %></a></h3>
                        <span><%= blog.mytime %></span>
                    </div>
                </div>
            <% }) %>
        <% }else{ %>
            <div class="row" id="firstone">
                <div class="col-md-2">
                    <p>no blogs uploaded yet...</p>
                </div>
            </div>
        <% } %>

        <br><br>
        <div class="row">
            <div class="col-md-12">
                <a href="/blogs/news" class="btn btn-primary">view more</a>
            </div>
        </div>
    </div>

<%- include('./partials/footer.ejs') %>